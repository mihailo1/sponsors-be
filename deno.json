{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-run --allow-import --allow-write --allow-env --watch --unstable-kv --allow-sys server.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "watch": [
    "server.ts",
    "routes/",
    "react-app/build/",
    "deps.ts"
  ],
  "nodeModulesDir": "auto",
  "importMap": "./import_map.json",
  "compilerOptions": {
    "strict": true
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
